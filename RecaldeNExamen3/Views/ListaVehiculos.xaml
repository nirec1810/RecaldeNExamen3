<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:namespace="clr-namespace:RecaldeNExamen3.ViewModel"
             x:Class="RecaldeNExamen3.Views.ListaVehiculos"
             Title="ListaVehiculos">

    <ContentPage.BindingContext>
        <namespace:VehiculoViewModel/>
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding ListaVehiculos}">
        
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="10">
                    <Label Text="{Binding Marca}" FontAttributes="Bold" />
                    <Label Text="{Binding Modelo}" />
                    <Label Text="{Binding AnioFabricacion}" />
                    <Label Text="{Binding Placa}" />

                    <Button Text="Recargar" Clicked="RecargarPagina" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>


</ContentPage>